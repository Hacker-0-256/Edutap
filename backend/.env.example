# EduTap Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Server Configuration
# ============================================
PORT=3000

# ============================================
# Database Configuration
# ============================================
# MongoDB connection string
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Local: mongodb://localhost:27017/school-attendance
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/school-attendance
MONGODB_URI=mongodb://localhost:27017/school-attendance

# ============================================
# JWT Authentication
# ============================================
# Secret key for JWT token signing (REQUIRED)
# Generate a strong random string (at least 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production

# ============================================
# SMS Configuration (Africa's Talking)
# ============================================
# Get these from https://account.africastalking.com/
AFRICAS_TALKING_API_KEY=your-africas-talking-api-key
AFRICAS_TALKING_USERNAME=your-africas-talking-username

# ============================================
# SMS Configuration (Twilio - Alternative)
# ============================================
# Uncomment and use these if you prefer Twilio instead of Africa's Talking
# Get these from https://www.twilio.com/console
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ============================================
# Payment Gateway (Optional - For Future Use)
# ============================================
# M-Pesa Configuration (Rwanda)
# MPESA_CONSUMER_KEY=your-mpesa-consumer-key
# MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
# MPESA_SHORTCODE=your-mpesa-shortcode
# MPESA_PASSKEY=your-mpesa-passkey
# MPESA_ENVIRONMENT=sandbox

# MTN Mobile Money Configuration (Rwanda)
# MTN_API_KEY=your-mtn-api-key
# MTN_API_SECRET=your-mtn-api-secret
# MTN_SUBSCRIPTION_KEY=your-mtn-subscription-key

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# Example: http://localhost:3000,https://edutap.example.com
# Leave empty or use * for development (not recommended for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# Environment
# ============================================
# Set to 'production' for production deployment
NODE_ENV=development

# ============================================
# Logging
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# Rate Limiting (Optional)
# ============================================
# Maximum requests per window (default: 100)
RATE_LIMIT_MAX=100
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
